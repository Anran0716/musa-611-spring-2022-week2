{
  "dependencies": {
    "http-server": "^14.1.0",
    "jest": "^27.4.7",
    "jest-puppeteer": "^6.0.3"
  },
  "devDependencies": {
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4"
  },
  "jest": {
    "preset": "jest-puppeteer"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "no-console": "off",
      "no-plusplus": "off"
    },
    "overrides": [
      {
        "files": ["lab/lab1/part1*/*.js"],
        "rules": {
          "prefer-const": "off"
        }
      },
      {
        "files": ["lab/lab1/part2*/*.js"],
        "rules": {
          "no-multiple-empty-lines": "off"
        }
      }
    ]
  }
}
